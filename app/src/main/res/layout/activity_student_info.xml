<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_height="match_parent"
     android:layout_width="match_parent"
     android:orientation="vertical">

    <LinearLayout
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:background="#14A2D8"
         android:padding="10dp"
         android:orientation="horizontal">

        <LinearLayout
             android:layout_height="match_parent"
             android:layout_width="0dp"
             android:gravity="center_vertical"
             android:orientation="horizontal"
             android:layout_weight="1"
             android:layout_gravity="start">

            <LinearLayout
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:paddingEnd="10dp"
                 android:background="@drawable/logo_bg"
                 android:gravity="center"
                 android:orientation="horizontal"
                 android:paddingBottom="5dp"
                 android:paddingStart="10dp"
                 android:paddingTop="5dp">

                <ImageView
                     android:layout_height="35dp"
                     android:layout_width="35dp"
                     android:src="@drawable/logo_transparent"
                     android:layout_marginEnd="5dp" />

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:textSize="10dp"
                     android:fontFamily="@font/moderniz"
                     android:textColor="#14A2D8"
                    android:text="STI SCAN"

                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
             android:layout_height="match_parent"
             android:layout_width="0dp"
             android:gravity="end"
             android:layout_weight="1">

            <TextView
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:background="@drawable/logout_btn"
                 android:clickable="true"
                 android:padding="5dp"
                 android:fontFamily="@font/poppins"
                 android:textColor="#fff"
                 android:id="@+id/logout"
                 android:layout_gravity="center_vertical"
                 android:text="Log out" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
         android:layout_height="match_parent"
         android:layout_width="match_parent"
         android:background="#fff"
        android:gravity="center"
         android:padding="25dp"
         android:orientation="vertical">

        <ImageView
            android:id="@+id/studentPic"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginBottom="10dp"
            android:background="#CCCCCC"
            android:scaleType="centerCrop" />

        <LinearLayout
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:background="@drawable/student_block"
             android:padding="15dp"
             android:orientation="vertical">





            <TextView
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:fontFamily="@font/poppins"
                 android:textSize="15dp"
                 android:textColor="#fff"
                 android:id="@+id/text_name" />

            <TextView
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:fontFamily="@font/poppins"
                 android:textSize="15dp"
                 android:textColor="#fff"
                 android:id="@+id/text_studentNumber" />

            <TextView
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:fontFamily="@font/poppins"
                 android:textSize="15dp"
                 android:textColor="#fff"
                 android:id="@+id/text_section" />

            <TextView
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:fontFamily="@font/poppins"
                 android:textSize="15dp"
                 android:textColor="#fff"
                 android:text="Status : Enrolled" />

        </LinearLayout>

        <TextView
            android:visibility="gone"
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Early out status : TRUE"
            android:textColor="#fff"
            android:background="@drawable/student_block"
            android:textAlignment="center"
            android:padding="10dp"
            android:fontFamily="@font/poppins"
            android:textSize="15dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="test"
            android:textAlignment="center"
            android:padding="10dp"
            android:layout_marginTop="15dp"
            android:textSize="15dp"
            android:id="@+id/day"
            android:fontFamily="@font/poppins"
            android:background="@drawable/student_block"
            android:textColor="#fff" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@id/msg"
            android:textColor="#111"
            android:textSize="15dp"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            android:visibility="gone"
            android:fontFamily="@font/poppins" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"/>

    </LinearLayout>

</LinearLayout>