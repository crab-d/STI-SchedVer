<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#14A2D8"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/logo_bg"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/logo_transparent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/moderniz"
                    android:text="STI SCAN"
                    android:textColor="#14A2D8"
                    android:textSize="10dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="end">

            <TextView
                android:id="@+id/logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/logout_btn"
                android:clickable="true"
                android:fontFamily="@font/poppins"
                android:padding="5dp"
                android:text="Log out"
                android:textColor="#fff" />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:orientation="vertical"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/section"
            android:background="@drawable/signup"
            android:textAlignment="center"
            android:padding="15dp"
            android:textColor="#111"
            android:fontFamily="@font/moderniz"
            android:textSize="20dp"
            android:layout_marginBottom="1dp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Early out status : TRUE"
            android:textColor="#fff"
            android:background="@drawable/student_block"
            android:textAlignment="center"
            android:padding="10dp"
            android:fontFamily="@font/poppins"
            android:textSize="15dp"
            android:layout_marginBottom="30dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Early Out"
                android:layout_marginTop="10dp"
                android:background="@drawable/student_block"
                android:padding="10dp"
                android:textAlignment="center"
                android:id="@+id/earlyOut"
                android:textColor="#fff"
                android:fontFamily="@font/poppins"
                android:layout_marginBottom="15dp"
                android:textSize="15dp"
                />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Students List"
            android:background="@drawable/student_block"
            android:padding="10dp"
            android:textAlignment="center"
            android:id="@+id/classList"
            android:clickable="true"
            android:textColor="#fff"
            android:fontFamily="@font/poppins"
            android:layout_marginBottom="15dp"
            android:textSize="15dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Schedule"
            android:background="@drawable/student_block"
            android:padding="10dp"
            android:textAlignment="center"
            android:id="@+id/schedule"
            android:textColor="#fff"
            android:fontFamily="@font/poppins"
            android:layout_marginBottom="15dp"
            android:textSize="15dp"
            />

    </LinearLayout>
</LinearLayout>